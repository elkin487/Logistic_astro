---
import { getI18N } from "../i18n";
import { ASSETS } from "../lib/constants";
const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
---

<!-- Fact Start -->
<div class="container-xxl py-5">
  <div class="container py-5">
    <div class="row g-5">
      <div class="col-lg-6 wow fadeInUp" data-wow-delay="0.1s">
        <h6 class="text-secondary text-uppercase mb-3">
          {i18n.ABOUT.SOME_FACTS.TITLE}
        </h6>
        <h1 class="mb-5">{i18n.ABOUT.SOME_FACTS.SUB_TITLE}</h1>
        <p class="mb-5">
          {i18n.ABOUT.SOME_FACTS.BODY}
        </p>
        <div class="d-flex align-items-center">
          <i
            class="fa fa-headphones fa-2x flex-shrink-0 bg-primary p-3 text-white"
          ></i>
          <div class="ps-4">
            <h6>{i18n.ABOUT.SOME_FACTS.CALL}</h6>
            <h3 class="text-primary m-0">{ASSETS.number}</h3>
          </div>
        </div>
      </div>
      <div class="col-lg-6">
        <div class="row g-4 align-items-center">
          <div class="col-sm-6">
            <div class="bg-primary p-4 mb-4 wow fadeIn" data-wow-delay="0.3s">
              <i class="fa fa-users fa-2x text-white mb-3"></i>
              <h2 class="text-white mb-2" data-toggle="counter-up">125</h2>
              <p class="text-white mb-0">Happy Clients</p>
            </div>
            <div class="bg-secondary p-4 wow fadeIn" data-wow-delay="0.5s">
              <i class="fa fa-ship fa-2x text-white mb-3"></i>
              <h2 class="text-white mb-2" data-toggle="counter-up">1360</h2>
              <p class="text-white mb-0">Complete Shipments</p>
            </div>
          </div>
          <div class="col-sm-6">
            <div class="bg-success p-4 mb-4 wow fadeIn" data-wow-delay="0.7s">
              <i class="fa fa-star fa-2x text-white mb-3"></i>
              <i class="fa fa-star fa-2x text-white mb-3"></i>
              <i class="fa fa-star fa-2x text-white mb-3"></i>
              <i class="fa fa-star fa-2x text-white mb-3"></i>
              <i class="fa fa-star-half fa-2x text-white mb-3"></i>
              <h2 class="text-white mb-2" data-toggle="counter-up">139</h2>
              <p class="text-white mb-0">Customer Reviews</p>
            </div>
            <div class="bg-danger p-4 wow fadeIn" data-wow-delay="0.5s">
              <i class="fa fa-ship fa-2x text-white mb-3"></i>
              <h2 class="text-white mb-2" >9 Mill</h2>
              <p class="text-white mb-0">Cif usd customer transaction</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- Fact End -->

<!-- Feature Start -->
<div class="container-fluid overflow-hidden py-5 px-lg-0">
  <div class="container feature py-5 px-lg-0">
    <div class="row g-5 mx-lg-0">
      <div class="text-center">
        <h6 class="text-secondary text-uppercase mb-3">
          {i18n.ABOUT.OUR_FEATURES.TITLE}
        </h6>
        <h1 class="mb-5">{i18n.ABOUT.OUR_FEATURES.SUB_TITLE}</h1>
      </div>
      <div class="col-lg-6 feature-text wow fadeInUp" data-wow-delay="0.1s">
        <div class="d-flex mb-5 wow fadeInUp" data-wow-delay="0.3s">
          <i class="fa fa-balance-scale text-primary fa-3x flex-shrink-0"></i>
          <div class="ms-4">
            <h5>{i18n.ABOUT.OUR_FEATURES.ITEMS.INTEGRITY.TITLE}</h5>
            <p class="mb-0" style="text-align: justify;">
              {i18n.ABOUT.OUR_FEATURES.ITEMS.INTEGRITY.BODY}
            </p>
          </div>
        </div>
        <div class="d-flex mb-5 wow fadeIn" data-wow-delay="0.5s">
          <i class="fa fa-star text-primary fa-3x flex-shrink-0"></i>
          <div class="ms-4">
            <h5>{i18n.ABOUT.OUR_FEATURES.ITEMS.EXCELLENCE.TITLE}</h5>
            <p class="mb-0" style="text-align: justify;">
              {i18n.ABOUT.OUR_FEATURES.ITEMS.EXCELLENCE.BODY}
            </p>
          </div>
        </div>
        <div class="d-flex mb-0 wow fadeInUp" data-wow-delay="0.7s">
          <i class="fa fa-tasks text-primary fa-3x flex-shrink-0"></i>
          <div class="ms-4">
            <h5>{i18n.ABOUT.OUR_FEATURES.ITEMS.INNOVATION.TITLE}</h5>
            <p class="mb-0" style="text-align: justify;">
              {i18n.ABOUT.OUR_FEATURES.ITEMS.INNOVATION.BODY}
            </p>
          </div>
        </div>
      </div>
      <div class="col-lg-6 feature-text wow fadeInUp" data-wow-delay="0.1s">
        <div class="d-flex mb-5 wow fadeInUp" data-wow-delay="0.3s">
          <i
            class="fa fa-american-sign-language-interpreting text-primary fa-3x flex-shrink-0"
          ></i>
          <div class="ms-4">
            <h5>{i18n.ABOUT.OUR_FEATURES.ITEMS.COLLABORATION.TITLE}</h5>
            <p class="mb-0" style="text-align: justify;">
              {i18n.ABOUT.OUR_FEATURES.ITEMS.COLLABORATION.BODY}
            </p>
          </div>
        </div>
        <div class="d-flex mb-5 wow fadeIn" data-wow-delay="0.5s">
          <i class="fa fa-check-square text-primary fa-3x flex-shrink-0"></i>
          <div class="ms-4">
            <h5>{i18n.ABOUT.OUR_FEATURES.ITEMS.QUALITY.TITLE}</h5>
            <p class="mb-0" style="text-align: justify;">
              {i18n.ABOUT.OUR_FEATURES.ITEMS.QUALITY.BODY}
            </p>
          </div>
        </div>
        <div class="d-flex mb-0 wow fadeInUp" data-wow-delay="0.7s">
          <i class="fa fa-comments text-primary fa-3x flex-shrink-0"></i>
          <div class="ms-4">
            <h5>{i18n.ABOUT.OUR_FEATURES.ITEMS.ORIENTATION.TITLE}</h5>
            <p class="mb-0" style="text-align: justify;">
              {i18n.ABOUT.OUR_FEATURES.ITEMS.ORIENTATION.BODY}
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- Feature End -->
