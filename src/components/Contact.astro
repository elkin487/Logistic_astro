---
import { ASSETS } from "../lib/constants";
import { getI18N } from "../i18n";
const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
---

<!-- Contact Start -->
<div class="container-fluid overflow-hidden py-5 px-lg-0">
  <div class="container contact-page py-5 px-lg-0">
    <div class="row g-5 mx-lg-0">
      <div class="col-md-6 contact-form wow fadeIn" data-wow-delay="0.1s">
        <h6 class="text-secondary text-uppercase">
          {i18n.CONTACT.GET_IN_TOUCH.TITLE}
        </h6>
        <h1 class="mb-4">{i18n.CONTACT.GET_IN_TOUCH.SUB_TITLE}</h1>

        <!-- Card -->
        <div class="mb-3">
          <div class="row no-gutters">
            <div class="col-md-3">
              <img
                style="width: 80px; margin-top:10%; margin-left: 25%;"
                class="rounded-circle"
                src="/public/img/testimonial-1.jpg"
              />
            </div>
            <div class="col-md-8">
              <div class="card-body">
                <h6 class="card-title">Elkin Moreno</h6>
                <div class="no-p-margin p">
                  <p>Desarrollador</p>
                  <a
                    type="button"
                    class="btn btn-white"
                    data-bs-toggle="tooltip"
                    data-bs-placement="top"
                    title="Cartagena Manga"
                  >
                    <i class="fa fa-map-marker-alt me-3"></i>
                  </a>
                  <a
                    type="button"
                    class="btn btn-white"
                    data-bs-toggle="tooltip"
                    data-bs-placement="top"
                    title="3162543022"
                  >
                    <i class="fa fa-phone-alt me-3"></i>
                  </a>
                  <a
                    type="button"
                    class="btn btn-white"
                    data-bs-toggle="tooltip"
                    data-bs-placement="top"
                    title="elkinjose487@gmail.com"
                  >
                    <i class="fa fa-envelope me-3"></i>
                  </a>
                  <!-- <i class="fa fa-map-marker-alt me-3"></i> -->
                  <!-- <i class="fa fa-phone-alt me-3"></i> -->
                  <!-- <i class="fa fa-envelope me-3"></i> -->
                </div>
              </div>
            </div>
          </div>
        </div>
        <!-- Card End -->
      </div>
      <div class="col-md-6 pe-lg-0 wow fadeInRight" data-wow-delay="0.1s">
        <div class="position-relative h-100">
          <iframe
            class="position-absolute w-100 h-100"
            style="object-fit: cover;"
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3001156.4288297426!2d-78.01371936852176!3d42.72876761954724!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x4ccc4bf0f123a5a9%3A0xddcfc6c1de189567!2sNew%20York%2C%20USA!5e0!3m2!1sen!2sbd!4v1603794290143!5m2!1sen!2sbd"
            frameborder="0"
            allowfullscreen=""
            aria-hidden="false"
            tabindex="0"></iframe>
        </div>
      </div>
    </div>
  </div>
</div>

<script
  src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"
></script>
<!-- Contact End -->
<style>
  /* Estilo personalizado para eliminar los márgenes entre los párrafos */
  .no-p-margin p {
    margin-bottom: 0; /* Eliminar el margen inferior */
  }
</style>
