---
import { getI18N } from "../i18n";

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
---

<!-- About Start -->
<div class="container-fluid overflow-hidden py-5 px-lg-0">
  <div class="container about py-5 px-lg-0">
    <div class="row g-5 mx-lg-0">
      <div
        class="col-lg-6 ps-lg-0 wow fadeInLeft"
        data-wow-delay="0.1s"
        style="min-height: 400px;"
      >
        <div class="position-relative h-100">
          <img
            class="position-absolute img-fluid w-100 h-100"
            src="/img/about.jpg"
            style="object-fit: cover;"
            alt=""
          />
        </div>
      </div>
      <div class="col-lg-6 about-text wow fadeInUp" data-wow-delay="0.3s">
        <h6 class="text-secondary text-uppercase mb-3">{i18n.ABOUT.ABOUT_S.TITLE}</h6>
        <h1 class="mb-5">{i18n.ABOUT.ABOUT_S.SUB_TITLE}</h1>
        <!-- <h1 class="mb-5">Quick Transport and Logistics Solutions</h1> -->
        <p class="mb-5">
          {i18n.ABOUT.ABOUT_S.BODY}
        </p>
        <div class="row g-4 mb-5">
          <div class="col-sm-6 wow fadeIn" data-wow-delay="0.5s">
            <i class="fa fa-globe fa-3x text-primary mb-3"></i>
            <h5> {i18n.ABOUT.ABOUT_S.GLOVAL_COVERGA}</h5>
            <p class="m-0">
              {i18n.ABOUT.ABOUT_S.GLOVAL_COVERGA_BODY}
            </p>
          </div>
          <div class="col-sm-6 wow fadeIn" data-wow-delay="0.7s">
            <i class="fa fa-shipping-fast fa-3x text-primary mb-3"></i>
            <h5>{i18n.ABOUT.ABOUT_S.ON_TIME_DELIVERY}</h5>
            <p class="m-0">
              {i18n.ABOUT.ABOUT_S.ON_TIME_DELIVERY_BODY}
            </p>
          </div>
        </div>
        <!-- <a href="" class="btn btn-primary py-3 px-5">Explore More</a> -->
      </div>
    </div>
  </div>
</div>
<!-- About End -->
